{
  "compilerOptions": {
    "outDir": "./outjs/",
    "esModuleInterop": false,
    "sourceMap": true,
    "module": "es2015",
    "target": "es5",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "jsx": "react",
    "jsxFactory": "createElement",
    "importHelpers": true,
    "noEmitHelpers": true
  },
  "include": [
    "./src/**/*.ts", "src/Compat.tsx"
  ]
}